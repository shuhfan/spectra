<div class="row page-header">
        <div class="col-lg-6 align-self-center ">
          <h2>All Careers</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">All Careers</li>
            </ol>
        </div>
        
</div>


<section class="main-content">

	
    

    <div class="container">
        
        <div class="row">
            <% careers.forEach(career => { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= career.job_title %></h5>
                        <p><strong>Company:</strong> <%= career.company_name %></p>
                        <p><strong>Location:</strong> <%= career.location %></p>
                        <p><strong>Type:</strong> <%= career.employment_type %></p>
                        <p><strong>Deadline:</strong> <%= career.application_deadline %></p>
                        <a href="/admin/delete-careers/<%= career.id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    
	
		
		
	<footer class="footer">
		<span>Copyright &copy;  2024 Specterra Geotech Private Limited. All rights reserved.</span>
	</footer>

</section>
