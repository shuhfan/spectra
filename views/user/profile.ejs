
<div class="page-wrapper">

    <%-include('../partials/userHeader')%>


    <section class="page-title" style="background-image: url(/images/background/page-title.jpg);">
        <div class="auto-container">
            <div class="title-outer text-center">
                <h1 class="title">Profile</h1>
                <ul class="page-breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li>Profile</li>
                </ul>
            </div>
        </div>
    </section>
    
    <div class="container">
        <!-- Profile Header -->
        <header class="profile-header">
          <h1>Welcome to Your Profile</h1>
          <p>Here are the test results you you can download them anytime.</p>
        </header>
    
        <!-- Files Section -->
        <section class="files-section">
          
          
          <% if (files && files.length > 0) { %>
            <div class="files-list">
              <% files.forEach(file => { %>
                <div class="file-item">
                  <span class="file-name"><%= file.file_name %></span>
                  <a href="<%= file.file_path %>" class="download-btn" download>Download</a>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <p>No files found.</p>
          <% } %>
        </section>
      </div>

    <%-include('../partials/userFooter')%>

</div>

<style>
    /* General Styles */
body {
  font-family: 'Arial', sans-serif;
  background-color: #f4f7fc;
  margin: 0;
  padding: 0;
  color: #333;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 30px;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h1, h2 {
  color: #4CAF50;
}

h1 {
  font-size: 36px;
  margin-bottom: 10px;
}

h2 {
  font-size: 24px;
  margin-bottom: 15px;
}

/* Profile Header */
.profile-header {
  text-align: center;
  margin-bottom: 40px;
}

.profile-header p {
  color: #777;
  font-size: 16px;
}

/* Files Section */
.files-section {
  margin-top: 30px;
}

.files-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.file-item {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  width: 250px;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}

.file-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.download-btn {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s;
  text-align: center;
}

.download-btn:hover {
  background-color: #45a049;
}

.files-list .file-item:hover {
  transform: translateY(-5px);
  transition: transform 0.3s ease;
}

.files-list .file-item {
  transition: transform 0.3s ease;
}

/* No Files Message */
.files-section p {
  color: #777;
  font-size: 18px;
  text-align: center;
  margin-top: 30px;
}

</style>