
    <style>
        /* Box sizing reset to include padding and borders in the element's total width and height */
        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            /* Remove default body margin */
            padding: 0;
            /* Remove default body padding */
            overflow-x: hidden;
            /* Prevent horizontal scrolling */
            font-family: Arial, sans-serif;
            /* Set a default font for better readability */
            background-color: #f5f5f5;
            /* Light background color */
        }

        .form_main {
            margin: auto;
            margin-top: 15vh;
            max-width: 400px;
            /* Set a max-width for the form */
            width: 90%;
            /* Allow the form to take up to 90% of the width */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: #fff;
            /* White background for the form */
            padding: 30px;
            border-radius: 30px;
            box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
        }

        .heading {
            font-size: 2.5em;
            color: #2e2e2e;
            font-weight: 700;
            margin: 15px 0 30px 0;
        }

        .inputContainer {
            width: 100%;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .inputIcon {
            position: absolute;
            left: 10px;
        }

        .inputField {
            width: 100%;
            height: 40px;
            background-color: transparent;
            border: none;
            border-bottom: 2px solid rgb(173, 173, 173);
            border-radius: 30px;
            margin: 10px 0;
            color: black;
            font-size: .8em;
            font-weight: 500;
            padding-left: 30px;
        }

        .inputField:focus {
            outline: none;
            border-bottom: 2px solid rgb(83, 199, 54);
        }

        .inputField::placeholder {
            color: rgb(80, 80, 80);
            font-size: 1em;
            font-weight: 500;
        }

        #button {
            position: relative;
            width: 100%;
            border: 2px solid #22a102;
            background-color: #1ea004;
            height: 40px;
            color: white;
            font-size: .8em;
            font-weight: 500;
            letter-spacing: 1px;
            border-radius: 30px;
            margin: 10px;
            cursor: pointer;
            overflow: hidden;
        }

        #button::after {
            content: "";
            position: absolute;
            background-color: rgba(255, 255, 255, 0.253);
            height: 100%;
            width: 150px;
            top: 0;
            left: -200px;
            border-bottom-right-radius: 100px;
            border-top-left-radius: 100px;
            filter: blur(10px);
            transition-duration: .5s;
        }

        #button:hover::after {
            transform: translateX(600px);
            transition-duration: .5s;
        }

        .signupContainer {
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .signupContainer p {
            font-size: .9em;
            font-weight: 500;
            color: black;
        }

        .signupContainer a {
            font-size: .7em;
            font-weight: 500;
            background-color: #33a000;
            color: white;
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 20px;
            margin-bottom: 3vh;
        }

        .google-login-button {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px 20px;
            background-color: white;
            border: 1px solid #747474;
            border-radius: 20px;
            cursor: pointer;
            gap: 10px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
            text-decoration: none;
            color: #000000;
        }

        .google-login-button:hover {
            background-color: #d4d4d4;
        }

        .google-icon {
            width: 18px;
            height: 18px;
        }

        .buttons-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Responsive Styles */
        @media only screen and (max-width: 480px) {
            .form_main {
                padding: 20px;
                /* Adjust padding for smaller screens */
            }

            .heading {
                font-size: 2em;
                /* Decrease heading size for smaller screens */
            }

            .inputField {
                height: 50px;
                /* Increase input field height for easier interaction */
                font-size: 1em;
                /* Increase font size */
            }

            #button {
                height: 50px;
                /* Increase button height */
                font-size: 1em;
                /* Increase button font size */
            }

            .signupContainer p,
            .signupContainer a {
                font-size: 0.9em;
                /* Adjust font size to improve readability */
            }

            .signupContainer a {
                padding: 10px 20px;
                /* Increase padding for the signup link */
            }
        }
    </style>



