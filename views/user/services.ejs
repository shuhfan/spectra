
<div class="page-wrapper">

    <%-include('../partials/userHeader')%>


    <section class="page-title" style="background-image: url(images/background/page-title.jpg);">
        <div class="auto-container">
            <div class="title-outer text-center">
                <h1 class="title">Services</h1>
                <ul class="page-breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li>Services</li>
                </ul>
            </div>
        </div>
    </section>
    

    <style>
        .service-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            min-height: 270px;
        }
        .service-card img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .btn-book {
            margin-top: 15px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        
        <div class="row">
            <% services.forEach(service => { %>
                <div class="service-block col-lg-4 col-md-6 wow fadeInUp">
                    <div class="inner-box">
                        <div class="image-box">
                            <!-- Service Image -->
                            <figure class="image">
                                <a href="/services/<%= service.id %>">
                                    <img alt="<%= service.title %>" src="/uploads/<%= service.image %>">
                                    <noscript>
                                        <img src="<%= service.image %>" alt="<%= service.title %>">
                                    </noscript>
                                </a>
                            </figure>
                        </div>
                        
                        <div class="content-box">
                            <!-- Service Title -->
                            <h5 class="title">
                                <a href="/services/<%= service.id %>"><%= service.title %></a>
                            </h5>
                            
                            <!-- Service Description (First 100 Characters) -->
                            <div class="text">
                                <%= service.description.substring(0, 100) %>...
                            </div>
                            
                            <!-- Read More Link -->
                            <a href="/services/<%= service.id %>" class="read-more">
                                Read More <i class="fa fa-long-arrow-alt-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
            <% }) %>
    
            <% if (services.length === 0) { %>
                <div class="col-12">
                    <div class="alert text-center"style="min-height: 50vh;padding-top: 25vh;">
                        <strong>No Services Available</strong> - Please check back later.
                    </div>
                </div>
            <% } %>
        </div>
    </div>
        

    <%-include('../partials/userFooter')%>

</div>